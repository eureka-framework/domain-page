{
  "name": "eureka/domain-page",
  "description": "Domain to manage dynamics page on web projet.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Domain\\Page\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Domain\\Page\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "7.4.*|8.0.*|8.1.*",

    "eureka/component-database": "^3.1",
    "eureka/component-orm": "^5.2",
    "eureka/component-validation": "^5.1"
  },

  "require-dev": {
    "eureka/kernel-console": "^5.0",
    "eureka/component-console": "^5.1",

    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "phpstan/phpstan": "^1.7",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6"
  }
}
