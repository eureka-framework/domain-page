{
  "name": "eureka/domain-page",
  "description": "Domain to manage dynamics page on web projet.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Domain\\Page\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Domain\\Page\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "8.1.*||8.2.*",

    "eureka/component-database": "^3.2",
    "eureka/component-orm": "^5.4",
    "eureka/component-validation": "^5.2"
  },

  "require-dev": {
    "eureka/kernel-console": "^5.2",
    "eureka/component-console": "^5.3",

    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpcov": "^9.0",
    "phpunit/phpunit": "^10.2",
    "squizlabs/php_codesniffer": "^3.7"
  }
}
